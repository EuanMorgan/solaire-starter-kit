# ===========================================
# Database
# ===========================================
DATABASE_URL=postgres://postgres:postgres@localhost:5435/solaire
TABLE_PREFIX=solaire_

# ===========================================
# Auth
# ===========================================
# Required: Random secret for signing tokens (min 32 chars recommended)
BETTER_AUTH_SECRET=change-me-in-production-use-openssl-rand-base64-32

# Required: Base URL for auth callbacks and redirects
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# GitHub OAuth (optional)
# ===========================================
# Create OAuth app at: https://github.com/settings/developers
# Callback URL: {NEXT_PUBLIC_BASE_URL}/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# Email - Resend (optional)
# ===========================================
# Get API key at: https://resend.com
RESEND_API_KEY=
FROM_EMAIL=noreply@example.com
# Local dev: mock emails (writes to .emails/*.json instead of sending)
MOCK_EMAIL=true

# ===========================================
# Rate Limiting - Upstash (optional)
# ===========================================
# Get credentials at: https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# Analytics - PostHog (optional)
# ===========================================
# Get your PostHog API key from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
# Use https://eu.i.posthog.com for EU or https://us.i.posthog.com for US
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

